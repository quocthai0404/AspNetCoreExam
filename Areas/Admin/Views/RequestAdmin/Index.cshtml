@{
	Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using AspdotNetCoreMVCExam.Services;
@inject PriorityService priorityService;

@section Nav {
	<nav class="mt-2">
		<ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
			<!-- Add icons to the links using the .nav-icon class
				 with font-awesome or any other icon font library -->
			<div style="background-color:lightslategrey">
			<li class="nav-header" style="font-size:20px">Employee</li>
			</div>
			<li class="nav-item">
				<a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link">
					<i class="fas fa-circle nav-icon"></i>
					<p>View Employee</p>
				</a>
			</li>
			<li class="nav-item">
				<a href="" data-toggle="modal" data-target="#createAccountModal" class="nav-link">
					<i class="fas fa-circle nav-icon"></i>
					<p>
						Create Employee Account
					</p>
				</a>
			</li>
			<div style="background-color:lightslategrey">
			<li class="nav-header" style="font-size:20px">Request</li>
			</div>
			<li class="nav-item">
				<a asp-area="Admin" asp-controller="Request" asp-action="Index" class="nav-link">
					<i class="fas fa-circle nav-icon"></i>
					<p>View Request</p>
				</a>
			</li>


		</ul>
	</nav>
}

<!--Body-->
<div class="content-wrapper">
	<!-- Content Header (Page header) -->
	<div class="content-header">
		<div class="container-fluid">
			<div class="row mb-2">
				<div class="col-sm-6">
					<h3 class="m-0">View Request</h3>
				</div><!-- /.col -->

			</div><!-- /.row -->
		</div><!-- /.container-fluid -->
	</div>
	<!-- /.content-header -->
	<!-- Main content -->
	<section class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card ">
						<div class="card-header bg-info">
							<h3 class="card-title" style="margin-top: 11px;">Find Request</h3>

							<div class="card-tools" style="margin-top: 11px;">
								<div class="input-group input-group-sm" style="width: 500px;">

									<span style="margin-top: 3px; font-weight:bold">From: </span>
									<input type="text" id="from1" name="table_search" class="form-control float-right" placeholder="From">


									<span style="margin-top: 3px; font-weight:bold">To: </span>
									<input type="text" id="to1" name="table_search" class="form-control float-right" placeholder="To">

									<span style="margin-top: 3px; font-weight:bold">Priority: </span>
									<select class="form-control" id="priority1" name="priority1">
										<option value="-1">All</option>
										@foreach (var priority in priorityService.findAll())
										{
											<option value="@priority.Madouutien">@priority.TendouuTien</option>

										}

									</select>
									<div class="input-group-append">
										<button type="button" id="buttonSearchAdmin" class="btn btn-default">
											<i class="fas fa-search"></i>
										</button>
									</div>
								</div>
							</div>
						</div>
						<!-- /.card-header -->
						<div class="card-body table-responsive p-0">
							<table class="table table-hover text-nowrap" id="RequestTable">
								<thead>
									<tr>
										<th>ID Request</th>
										<th>ID EmpRequest</th>
										<th>Title</th>
										<th>Date</th>
										<th>Priority</th>
										<th>Content</th>
										<th>ID Support</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var request in ViewBag.requests)
									{
										<tr>
											<td>@request.Mayeucau</td>
											<td>@request.ManvGui</td>
											<td>@request.Tieude</td>
											<td>@request.Ngaygui.ToString("yyyy/MM/dd")</td>
											<td>@request.Madouutien</td>
											<td>@request.Noidung</td>
											@if (request.ManvXuly == null)
											{
												<td><a class="btn btn-success btn-addSupport" data-idrequest="@request.Mayeucau" data-toggle="modal" data-target="#supportmodal">Choose Support</a></td>

											}
											else
											{
												<td>@request.ManvXuly</td>
											}
										</tr>

									}
								</tbody>
							</table>
						</div>
						<!-- /.card-body -->
					</div>
					<!-- /.card -->
				</div>
			</div>

		</div><!-- /.container-fluid -->
	</section>
	<!-- /.content -->
</div>


