						}
						else {
							console.log(result);
							$("#RequestTable tbody").html(createHTMLTable2(result));
						}
					}
				});
			});
			$('#RequestTable').on('click', 'a', function () {
				var requestID = $(this).data("idrequest");

				$.ajax({
					type: 'GET',
